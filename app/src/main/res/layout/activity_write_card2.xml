<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TableRow>

            <TableRow android:layout_marginTop="1dp" >

                <TextView
                    android:id="@+id/info"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:text="" />
            </TableRow>
        </TableRow>

        <TableRow>

            <TableRow android:layout_marginTop="5dp" >

                <TextView
                    android:id="@+id/myresetView2"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="偏移" />

                <TextView
                    android:id="@+id/myresetView3"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="长度" />

                <TextView
                    android:id="@+id/myresetView4"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="密码" />
            </TableRow>
        </TableRow>

        <TableRow>

            <TableRow android:layout_marginTop="5dp" >

                <EditText
                    android:id="@+id/editOffset"
                    android:layout_width="60dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="20dp"
                    android:background="@color/white"
                    android:digits="1234567890"
                    android:ems="16"
                    android:inputType="numberDecimal"
                    android:maxLength="256"
                    android:text="32"
                    android:textColor="#000000" />

                <EditText
                    android:id="@+id/editLength"
                    android:layout_width="60dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="20dp"
                    android:background="@color/white"
                    android:digits="1234567890"
                    android:ems="16"
                    android:inputType="numberDecimal"
                    android:maxLength="256"
                    android:text="10"
                    android:textColor="#000000" />

                <EditText
                    android:id="@+id/editPWD"
                    android:layout_width="120dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="20dp"
                    android:background="@color/white"
                    android:digits="1234567890abcdefABCDEF"
                    android:ems="16"
                    android:maxLength="256"
                    android:text="B62307"
                    android:textColor="#000000" />
            </TableRow>
        </TableRow>

        <TableRow>

            <TableRow android:layout_marginTop="5dp" >

                <TextView
                    android:id="@+id/mywriteView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="写入数据" />
            </TableRow>
        </TableRow>

        <TableRow>

            <TableRow android:layout_marginTop="5dp" >

                <EditText
                    android:id="@+id/editWriteData"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_marginLeft="0dp"
                    android:background="@color/white"
                    android:digits="1234567890abcdefABCDEF"
                    android:ems="16"
                    android:maxLength="1024"
                    android:text="11223344556677889900"
                    android:textColor="#000000" />
            </TableRow>
        </TableRow>

        <TableRow>

            <TableRow android:layout_marginTop="5dp" >

                <TextView
                    android:id="@+id/myreturnView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="返回信息:" />
            </TableRow>
        </TableRow>

        <TableRow>

            <TableRow android:layout_marginTop="5dp" >

                <EditText
                    android:id="@+id/editReturnMessage"
                    android:layout_width="wrap_content"
                    android:layout_height="120dp"
                    android:layout_marginLeft="0dp"
                    android:background="@color/white"
                    android:digits="1234567890abcdef"
                    android:ems="16"
                    android:maxLength="1000"
                    android:text=""
                    android:textColor="#000000" />
            </TableRow>
        </TableRow>

        <TableRow>

            <TableRow android:layout_marginTop="1dp" >

                <Button
                    android:id="@+id/connectbutton"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="连接" />

                <Button
                    android:id="@+id/disconnectbutton"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="断开" />
            </TableRow>
        </TableRow>

        <TableRow>

            <TableRow android:layout_marginTop="3dp" >

                <Button
                    android:id="@+id/resetbutton"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="写数据 " />

                <Button
                    android:id="@+id/button1"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="读数据" />
            </TableRow>
        </TableRow>

        <TableRow>

            <TableRow android:layout_marginTop="3dp" >

                <Button
                    android:id="@+id/sendcmdbutton"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="读错误计数器 " />

                <Button
                    android:id="@+id/button2"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text=" 校验密码 " />
            </TableRow>
        </TableRow>

        <TableRow>

            <TableRow android:layout_marginTop="3dp" >

                <Button
                    android:id="@+id/button3"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="读卡密码" />

                <Button
                    android:id="@+id/button4"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="修改密码" />
            </TableRow>
        </TableRow>

        <TableRow>

            <TableRow android:layout_marginTop="3dp" >

                <TextView
                    android:id="@+id/mystateView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="hello" />
            </TableRow>
        </TableRow>
    </TableLayout>

</ScrollView>